@model TestApp.Domain.Models.ClientsModel

@{
    ViewData["Title"] = "Client Detail";
    Layout = "_LayoutNew";
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-header card-form">
                <h3 class="card-title">Client Form<small></small></h3>
            </div>
            <form>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="DocumentId" class="control-label"></label>
                        <input asp-for="DocumentId" class="form-control" title="Campo cédula del Seveclie" disabled />
                    </div>                    
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" title="Campo nombre del Seveclie" disabled />
                    </div>                                        

                    <div class="form-group">
                        <label asp-for="GendersId" class="control-label"></label>
                        @Html.DropDownListFor(model => model.GendersId, Model.SelectListGenders.List, new { @class = "form-control", @title = "Campo generos del Seveclie", @disabled = "disabled" })

                    </div>

                    <div class="form-group">
                        <label asp-for="BirthDate" class="control-label"></label>                        
                        @Html.TextBoxFor(model => model.BirthDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", @title = "Campo fecha del Seveclie", @disabled = "disabled" })
                    </div>

                    <div class="form-group">
                        <label asp-for="MaritalStatusId" class="control-label"></label>
                        @Html.DropDownListFor(model => model.MaritalStatusId, Model.SelectListMaritalStatus.List, new { @class = "form-control", @title = "Campo estado civil del Seveclie", @disabled = "disabled" })
                    </div>

                </div>

                <div class="card-footer">                    
                    <a asp-action="Index" type="button" class="btn btn-primary command-button">Return</a>
                </div>

            </form>
        </div>      
    </div>    
</div>

<script src="~/WebCore/plugins/jquery/jquery.min.js"></script>
<script src="~/WebCore/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/WebCore/plugins/jquery-validation/jquery.validate.min.js"></script>
<script src="~/WebCore/plugins/jquery-validation/additional-methods.min.js"></script>
<script src="~/WebCore/dist/js/adminlte.min.js"></script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

