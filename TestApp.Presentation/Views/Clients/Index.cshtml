@model TestApp.Domain.Models.DashboardModel

@{
    ViewData["Title"] = "Clients";
    Layout = "_LayoutNew";
}
<section class="content container-fluid">

    <div class="card card-primary">
        <div class="card-header card-form">
            <h3 class="card-title">Filter<small></small></h3>
        </div>
        <form asp-action="Filter" asp-id="quickForm" id="quickForm" enctype="multipart/form-data">
            <div class="card-body card-body-filter">
                <div>
                    <div class="form-group form-group-filter">
                        <label asp-for="DocumentID" class="control-label"></label>
                        <input asp-for="DocumentID" class="form-control" />
                    </div>
                    <div class="form-group form-group-filter">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                    </div>
                </div>
                <div>
                    <div class="form-group form-group-filter">
                        <label asp-for="GendersId" class="control-label"></label>
                        @Html.DropDownListFor(model => model.GendersId, Model.SelectListGenders.List, new { @class = "form-control" })
                    </div>
                    <div class="form-group form-group-filter">
                        <label asp-for="BirthDate" class="control-label"></label>
                        @Html.TextBoxFor(model => model.BirthDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                    </div>
                </div>
                <div>
                    <div class="form-group form-group-filter">
                        <label asp-for="MaritalStatusId" class="control-label"></label>
                        @Html.DropDownListFor(model => model.MaritalStatusId, Model.SelectListMaritalStatus.List, new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="card-footer">
                <button type="submit" class="btn btn-primary command-button">Filter</button>
                <a href="/clients/filterClear" type="button" class="btn btn-primary command-button">Clear</a>
            </div>
        </form>
    </div>

    <div>
        <p class="create-button">
            <a asp-action="Create" type="button" class="btn btn-primary command-button">Create</a>
        </p>
    </div>   

    <div class="card card-primary card-primary-filter">        

        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.DocumentID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.BirthDate)
                    </th>

                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>

                @if (Model.ClientsList.Any())
                {
                    @foreach (var item in Model.ClientsList)
                    {

                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.DocumentId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName) @Html.DisplayFor(modelItem => item.Name)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.BirthDate)
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                <a href="#" onclick="ConfirmDelete(@item.Id)">Delete</a>
                            </td>
                        </tr>
                    }
                }else{
                     <tr>
                        <td>No found records</td>
                    </tr>
                }
               
            </tbody>
        </table>

    </div>

    <div class="modal fade" id="deleteseveclieModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">Delete</h3>
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this record?</p>
                </div>
                <div class="modal-footer">
                    <button href="#" class="btn btn-success" onclick="DeleteSeveclie()">Yes</button>
                    <a href="#" class="btn btn-default" data-dismiss="modal">No</a>
                </div>
            </div>
        </div>
    </div>
</section>

<input type="hidden" id="hiddenSeveclieId" />


@section scripts {
    <script>


        function ConfirmDelete (seveclieId) {

            $("#hiddenSeveclieId").val(seveclieId);
            $("#deleteseveclieModal").modal('show');

        }

        function DeleteSeveclie() {

            var seveclieId = $("#hiddenSeveclieId").val();

            $.ajax({

                type: "POST",
                url: "clients/delete",
                data: { Id: seveclieId },
                success: function (result) {

                    $("#deleteseveclieModal").modal("hide");
                    window.location.reload();

                }
            })
        }

    </script>

}
